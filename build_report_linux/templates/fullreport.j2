<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Ansible Linux Automation Report</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <style>
    body { font-family: Arial, sans-serif; background: #f4f6f9; margin: 0; }
    .header { background: #1c1f23; padding: 12px 20px; display: flex; align-items: center; }
    .header img { height: 40px; margin-right: 12px; }
    .header h2 { color: white; margin: 0; font-size: 20px; }

    .container { margin-top: 20px; }

    .top-actions { text-align: center; margin-bottom: 15px; }
    .download-btn { padding: 6px 12px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer; }
    .search-input { padding: 6px; margin-left: 10px; border: 1px solid #ccc; border-radius: 4px; }

    .system-box { background: white; border-radius: 6px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); padding: 15px; margin-bottom: 20px; }
    .system-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 10px; }
    .system-header h4 { margin: 0; font-size: 18px; }
    .status-badge { background: #28a745; color: white; padding: 3px 8px; border-radius: 10px; font-size: 12px; font-weight: bold; }

    .sys-info { font-size: 14px; margin-bottom: 15px; }
    .sys-info b { margin-right: 5px; }

    .patch-header { background: #dc3545; color: white; padding: 6px 10px; font-weight: bold; border-radius: 4px 4px 0 0; }
    .patch-body { border: 1px solid #ccc; border-top: none; background: white; padding: 0; border-radius: 0 0 4px 4px; }
    .patch-body table { width: 100%; margin: 0; border-collapse: collapse; }
    .patch-body td { padding: 6px 10px; font-size: 14px; border: 1px solid #e0e0e0; }
    .patch-body tr:nth-child(even) { background: #f9f9f9; }
  </style>

  <script>
    function downloadCSV(tableId, filename) {
      var csv = [];
      var rows = document.querySelectorAll("#" + tableId + " tr");
      for (var i = 0; i < rows.length; i++) {
        var row = [], cols = rows[i].querySelectorAll("td, th");
        for (var j = 0; j < cols.length; j++) {
          row.push('"' + cols[j].innerText.replace(/"/g, '""') + '"');
        }
        csv.push(row.join(","));
      }
      var csvFile = new Blob([csv.join("\n")], { type: "text/csv" });
      var downloadLink = document.createElement("a");
      downloadLink.download = filename;
      downloadLink.href = window.URL.createObjectURL(csvFile);
      downloadLink.click();
    }
  </script>
</head>

<body>
  <!-- HEADER -->
  <div class="header">
    <img src="redhat-ansible-logo.svg" alt="Red Hat Ansible">
    <h2>Ansible Linux Automation Report</h2>
  </div>

  <div class="container">
    <!-- Actions -->
    <div class="top-actions">
      <button onclick="downloadCSV('patch_table','ansible_report.csv')" class="download-btn">Download CSV</button>
      <input type="search" id="search-main" placeholder="Search..." class="search-input"
             onkeyup="filterTable('search-main','patch_table')"/>
    </div>

    {% for linux_host in ansible_play_hosts|sort %}
    <div class="system-box">
      <div class="system-header">
        <h4>
          <img src="server.png" width="28">
          {{ hostvars[linux_host]['inventory_hostname'].split('.')[0] }}
        </h4>
        <span class="status-badge">Up-to-date</span>
      </div>

      <div class="sys-info">
        <b>Package Manager:</b> {{ hostvars[linux_host]['ansible_pkg_mgr']|default("none") }}
        &nbsp;&nbsp; <b>OS:</b> {{ hostvars[linux_host]['ansible_distribution'] }} {{ hostvars[linux_host]['ansible_distribution_version'] }}
        &nbsp;&nbsp; <b>Kernel:</b> {{ hostvars[linux_host]['ansible_kernel'] }}
      </div>

      <!-- Last Patch Info -->
      <div class="patch-header">Last Patch Info</div>
      <div class="patch-body">
        <table id="patch_table">
          <tr><td><b>IP Address</b></td><td>{{ hostvars[linux_host]['ansible_default_ipv4']['address']|default("N/A") }}</td></tr>
          <tr><td><b>User ID</b></td><td>{{ hostvars[linux_host]['ansible_user_id']|default("N/A") }}</td></tr>
          <tr><td><b>System Date</b></td><td>{{ ansible_date_time.date }} {{ ansible_date_time.time }}</td></tr>
          <tr><td><b>Last Reboot Time</b></td><td>{{ hostvars[linux_host]['ansible_lastboot']|default("N/A") }}</td></tr>
          <tr><td><b>Last 15 Installed Packages</b></td>
            <td>
              {% if hostvars[linux_host]['installed_packages'] is defined %}
                {% for package in hostvars[linux_host]['installed_packages'][:15] %}
                  {{ package }}<br>
                {% endfor %}
              {% else %}
                No package data available
              {% endif %}
            </td>
          </tr>
        </table>
      </div>
    </div>
    {% endfor %}
  </div>
</body>
</html>
