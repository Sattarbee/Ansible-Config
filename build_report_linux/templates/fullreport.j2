<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Ansible Linux Automation Report</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <style>
    body { font-family: 'Open Sans', sans-serif; background-color: #f4f6f9; }
    .header { background: #1c1f23; padding: 15px; display: flex; justify-content: space-between; align-items: center; }
    .header img { height: 40px; }
    .header .title { color: white; font-size: 20px; margin-left: 10px; }
    .report-card { background: #fff; border-radius: 8px; padding: 20px; margin-top: 20px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); }
    .status-badge { background: #28a745; color: white; padding: 5px 12px; border-radius: 12px; font-size: 12px; }
    .patch-header { background: #dc3545; color: white; padding: 10px; font-weight: bold; border-radius: 5px 5px 0 0; }
    .patch-body { background: #fff; padding: 15px; border: 1px solid #ccc; border-top: none; border-radius: 0 0 5px 5px; }
    .patch-body table { width: 100%; margin-top: 10px; }
    .patch-body td { padding: 6px; border-bottom: 1px solid #eee; }
    ul.pkg-list { list-style-type: none; padding: 0; margin: 0; }
    ul.pkg-list li { padding: 4px 0; border-bottom: 1px solid #f0f0f0; }
    .accordion-header { background: #f8f9fa; padding: 10px; cursor: pointer; border: 1px solid #ddd; margin-top: 10px; }
    .accordion-content { display: none; padding: 15px; background: #fff; border: 1px solid #ddd; border-top: none; }
    table.sortable th { cursor: pointer; }
  </style>
  <script>
    $(function() {
      $(".accordion-header").click(function() {
        $(this).next(".accordion-content").slideToggle();
      });
    });
  </script>
</head>
<body>

<!-- HEADER -->
<div class="header">
  <div class="d-flex align-items-center">
    <img src="redhat-ansible-logo.svg" alt="Red Hat Ansible">
    <span class="title">Ansible Linux Automation Report</span>
  </div>
  <button class="btn btn-outline-light">Download CSV</button>
</div>

<div class="container">

  {% for linux_host in ansible_play_hosts|sort %}

  <!-- SYSTEM SUMMARY CARD -->
  <div class="report-card">
    <h4>
      <img src="server.png" width="28">
      {{ hostvars[linux_host]['inventory_hostname'].split('.')[0] }}
      <span class="status-badge">Up-to-date</span>
    </h4>
    <p><b>Package Manager:</b> {{ hostvars[linux_host]['ansible_pkg_mgr']|default("none") }}</p>
    <p><b>OS:</b> {{ hostvars[linux_host]['ansible_distribution'] }} {{ hostvars[linux_host]['ansible_distribution_version'] }}</p>
    <p><b>Kernel:</b> {{ hostvars[linux_host]['ansible_kernel'] }}</p>
  </div>

  <!-- LAST PATCH INFO -->
  <div class="mt-3">
    <div class="patch-header">Last Patch Info</div>
    <div class="patch-body">
      <table>
        <tr><td><b>IP Address</b></td><td>{{ hostvars[linux_host]['ansible_default_ipv4']['address']|default("N/A") }}</td></tr>
        <tr><td><b>User ID</b></td><td>{{ hostvars[linux_host]['ansible_user_id']|default("N/A") }}</td></tr>
        <tr><td><b>System Date</b></td><td>{{ ansible_date_time.date }} {{ ansible_date_time.time }}</td></tr>
        <tr><td><b>Last Reboot Time</b></td><td>{{ hostvars[linux_host]['ansible_lastboot']|default("N/A") }}</td></tr>
      </table>

      <h6 class="mt-3"><b>Last 15 Installed Packages</b></h6>
      <ul class="pkg-list">
      {% if hostvars[linux_host]['installed_packages'] is defined %}
        {% for package in hostvars[linux_host]['installed_packages'][:15] %}
          <li>{{ package }}</li>
        {% endfor %}
      {% else %}
        <li>No package data available</li>
      {% endif %}
      </ul>
    </div>
  </div>

  <!-- PACKAGEFACTS ACCORDION -->
  <div class="accordion-header">ðŸ“¦ Package Facts</div>
  <div class="accordion-content">
    <table class="table table-sm table-bordered sortable">
      <thead>
        <tr>
          <th>Package Name</th>
          <th>Source</th>
          <th>Release</th>
          <th>Version</th>
        </tr>
      </thead>
      <tbody>
      {% if hostvars[linux_host]['packagefacts'] is defined %}
        {% for package in hostvars[linux_host]['packagefacts'] %}
        <tr>
          <td>{{package['value'][0]['name']}}</td>
          <td>{{package['value'][0]['source']}}</td>
          <td>{{package['value'][0]['release']}}</td>
          <td>{{package['value'][0]['version']}}</td>
        </tr>
        {% endfor %}
      {% else %}
        <tr><td colspan="4">No package facts available</td></tr>
      {% endif %}
      </tbody>
    </table>
  </div>

  <!-- SERVICES ACCORDION -->
  <div class="accordion-header">ðŸ›  Services Facts</div>
  <div class="accordion-content">
    <table class="table table-sm table-bordered sortable">
      <thead>
        <tr>
          <th>Service Name</th>
          <th>State</th>
          <th>Source</th>
        </tr>
      </thead>
      <tbody>
      {% if hostvars[linux_host]['services'] is defined %}
        {% for servicesname in hostvars[linux_host]['services']|sort %}
          {% set service = hostvars[linux_host]['services'][servicesname] %}
          <tr>
            <td>{{service['name']}}</td>
            <td>{{service['state']}}</td>
            <td>{{service['source']}}</td>
          </tr>
        {% endfor %}
      {% else %}
        <tr><td colspan="3">No services data available</td></tr>
      {% endif %}
      </tbody>
    </table>
  </div>

  {% endfor %}

  <div class="text-center mt-5">
    <p>Created with</p>
    <img src="webpage_logo.png" width="250">
  </div>

</div>
</body>
</html>
