<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Ansible Linux Automation Report</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body { font-family: 'Open Sans', sans-serif; background-color: #f4f6f9; }
    .header { background: #1c1f23; padding: 15px; display: flex; justify-content: space-between; align-items: center; }
    .header img { height: 40px; }
    .header .title { color: white; font-size: 20px; margin-left: 10px; }
    .report-card { background: #fff; border-radius: 8px; padding: 20px; margin-top: 20px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); }
    .status-badge { background: #28a745; color: white; padding: 5px 12px; border-radius: 12px; font-size: 12px; }
    .patch-header { background: #dc3545; color: white; padding: 10px; font-weight: bold; border-radius: 5px 5px 0 0; }
    .patch-body { background: #fff; padding: 15px; border: 1px solid #ccc; border-top: none; border-radius: 0 0 5px 5px; }
    .patch-body table { width: 100%; margin-top: 10px; border-collapse: collapse; }
    .patch-body td, .patch-body th { padding: 6px; border: 1px solid #ddd; }
    .patch-body th { background-color: #f8f9fa; }
    .search-input { margin: 10px 0; padding: 5px; width: 100%; border: 1px solid #ccc; border-radius: 4px; }
  </style>
  <script>
    // CSV Export Function
    function downloadCSV(tableId, filename) {
      var csv = [];
      var rows = document.querySelectorAll("#" + tableId + " tr");

      for (var i = 0; i < rows.length; i++) {
        var row = [], cols = rows[i].querySelectorAll("td, th");
        for (var j = 0; j < cols.length; j++) {
          row.push('"' + cols[j].innerText.replace(/"/g, '""') + '"');
        }
        csv.push(row.join(","));
      }

      var csvFile = new Blob([csv.join("\n")], { type: "text/csv" });
      var downloadLink = document.createElement("a");
      downloadLink.download = filename;
      downloadLink.href = window.URL.createObjectURL(csvFile);
      downloadLink.style.display = "none";
      document.body.appendChild(downloadLink);
      downloadLink.click();
    }

    // Search Filter
    function filterTable(inputId, tableId) {
      var input = document.getElementById(inputId);
      var filter = input.value.toLowerCase();
      var rows = document.querySelectorAll("#" + tableId + " tbody tr");

      rows.forEach(function(row) {
        var text = row.innerText.toLowerCase();
        row.style.display = text.indexOf(filter) > -1 ? "" : "none";
      });
    }
  </script>
</head>
<body>

<!-- HEADER -->
<div class="header">
  <div class="d-flex align-items-center">
    <img src="redhat-ansible-logo.svg" alt="Red Hat Ansible">
    <span class="title">Ansible Linux Automation Report</span>
  </div>
</div>

<div class="container">

  {% for linux_host in ansible_play_hosts|sort %}

  <!-- SYSTEM SUMMARY CARD -->
  <div class="report-card">
    <h4>
      <img src="server.png" width="28">
      {{ hostvars[linux_host]['inventory_hostname'].split('.')[0] }}
      <span class="status-badge">Up-to-date</span>
    </h4>
    <p><b>Package Manager:</b> {{ hostvars[linux_host]['ansible_pkg_mgr']|default("none") }}</p>
    <p><b>OS:</b> {{ hostvars[linux_host]['ansible_distribution'] }} {{ hostvars[linux_host]['ansible_distribution_version'] }}</p>
    <p><b>Kernel:</b> {{ hostvars[linux_host]['ansible_kernel'] }}</p>
  </div>

  <!-- LAST PATCH INFO -->
  <div class="mt-3">
    <div class="patch-header">Last Patch Info</div>
    <div class="patch-body">
      <table>
        <tr><td><b>IP Address</b></td><td>{{ hostvars[linux_host]['ansible_default_ipv4']['address']|default("N/A") }}</td></tr>
        <tr><td><b>User ID</b></td><td>{{ hostvars[linux_host]['ansible_user_id']|default("N/A") }}</td></tr>
        <tr><td><b>System Date</b></td><td>{{ ansible_date_time.date }} {{ ansible_date_time.time }}</td></tr>
        <tr><td><b>Last Reboot Time</b></td><td>{{ hostvars[linux_host]['ansible_lastboot']|default("N/A") }}</td></tr>
      </table>

      <h6 class="mt-3"><b>Last 15 Installed Packages</b></h6>

      <!-- Search Input -->
      <input type="text" id="search-{{ linux_host }}" class="search-input" onkeyup="filterTable('search-{{ linux_host }}', 'pkg-table-{{ linux_host }}')" placeholder="Search packages...">

      <!-- Package Table -->
      <table id="pkg-table-{{ linux_host }}">
        <thead>
          <tr>
            <th>Package</th>
          </tr>
        </thead>
        <tbody>
        {% if hostvars[linux_host]['installed_packages'] is defined %}
          {% for package in hostvars[linux_host]['installed_packages'][:15] %}
          <tr>
            <td>{{ package }}</td>
          </tr>
          {% endfor %}
        {% else %}
          <tr><td>No package data available</td></tr>
        {% endif %}
        </tbody>
      </table>

      <!-- Download CSV Button -->
      <button class="btn btn-sm btn-primary mt-2" onclick="downloadCSV('pkg-table-{{ linux_host }}', '{{ linux_host }}_packages.csv')">Download CSV</button>
    </div>
  </div>

  {% endfor %}

  <div class="text-center mt-5">
    <p>Created with</p>
    <img src="webpage_logo.png" width="250">
  </div>

</div>
</body>
</html>
