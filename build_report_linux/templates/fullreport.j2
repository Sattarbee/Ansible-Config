<!DOCTYPE html>
<html>
<head>
  <title>Test Search Box</title>
  <style>
    body {
      background: #353a40;
      color: white;
      font-family: Arial, sans-serif;
    }
    header {
      background: #171717;
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    table {
      width: 100%;
      margin-top: 20px;
      background: white;
      color: black;
      border-collapse: collapse;
    }
    table, th, td {
      border: 1px solid black;
    }
    th, td {
      padding: 8px;
      text-align: left;
    }
    ul {
      margin: 0;
      padding-left: 20px;
    }
  </style>
</head>
<body>

<header>
  <a href="https://ansible.com" style="color: white; text-decoration: none; font-weight: bold;">Red Hat Ansible</a>
  <input
    type="text"
    class="search-input"
    data-table="main_net_table"
    placeholder="Search Hostname..."
    style="background-color: white; color: black; border: 1px solid #ccc; padding: 6px 10px; font-size: 14px; border-radius: 4px; width: 200px;"
  />
</header>

<table class="main_net_table" border="1" style="width: 100%; margin-top: 20px; background: white; color: black;">
  <thead>
    <tr><th>Linux Device</th><th>Other</th></tr>
  </thead>
  <tbody>
    <tr><td>host1</td><td>abc</td></tr>
    <tr><td>host2</td><td>def</td></tr>
    <tr><td>testhost</td><td>ghi</td></tr>
  </tbody>
</table>

<!-- Security Patches Section -->
<h2 style="color: white; margin-top: 40px;">Security Patches Available on Hosts</h2>
<table border="1" style="width: 100%; background: white; color: black;">
  <thead>
    <tr>
      <th>Host</th>
      <th>Security Patches</th>
    </tr>
  </thead>
  <tbody>
    {% for host in groups['Linux'] %}
    <tr>
      <td>{{ host }}</td>
      <td>
        {% set patches = all_security_patches[loop.index0] | default('No security patches available.') %}
        {% if patches != 'No security patches available.' %}
          <ul>
          {% for line in patches.split('\n') %}
            {% if line.strip() %}
              <li>{{ line }}</li>
            {% endif %}
          {% endfor %}
          </ul>
        {% else %}
          No security patches available.
        {% endif %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<script>
  (function(document) {
      'use strict';

      var TableFilter = (function(myArray) {
          var search_input;

          function _onInputSearch(e) {
              search_input = e.target;
              var tables = document.getElementsByClassName(search_input.getAttribute('data-table'));
              myArray.forEach.call(tables, function(table) {
                  myArray.forEach.call(table.tBodies, function(tbody) {
                      myArray.forEach.call(tbody.rows, function(row) {
                          var cell = row.cells[0];
                          if (!cell) return;
                          var text_content = cell.textContent.toLowerCase();
                          var search_val = search_input.value.toLowerCase();
                          row.style.display = text_content.indexOf(search_val) > -1 ? '' : 'none';
                      });
                  });
              });
          }

          return {
              init: function() {
                  var inputs = document.getElementsByClassName('search-input');
                  myArray.forEach.call(inputs, function(input) {
                      input.oninput = _onInputSearch;
                  });
              }
          };
      })(Array.prototype);

      document.addEventListener('readystatechange', function() {
          if (document.readyState === 'complete') {
              TableFilter.init();
          }
      });

  })(document);
</script>

</body>
</html>
