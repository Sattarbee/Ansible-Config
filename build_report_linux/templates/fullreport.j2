<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Ansible Linux Automation Report</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <style>
    body { font-family: 'Open Sans', sans-serif; background-color: #f4f6f9; }
    .header { background: #1c1f23; padding: 15px; display: flex; justify-content: flex-start; align-items: center; }
    .header img { height: 45px; margin-right: 15px; }
    .header h2 { color: white; margin: 0; }

    .report-card { background: #fff; border-radius: 8px; padding: 20px; margin-top: 20px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); }

    .status-badge { background: #28a745; color: white; padding: 3px 10px; border-radius: 12px; font-size: 12px; font-weight: bold; }

    .patch-header { background: #dc3545; color: white; padding: 8px; font-weight: bold; border-radius: 4px 4px 0 0; }
    .patch-body { background: #fff; padding: 15px; border: 1px solid #ccc; border-top: none; border-radius: 0 0 4px 4px; }
    .patch-body table { width: 100%; border-collapse: collapse; }
    .patch-body td { padding: 6px; border: 1px solid #e0e0e0; }
    .patch-body tr:nth-child(even) { background-color: #f9f9f9; }

    .top-actions { display: flex; justify-content: center; align-items: center; gap: 15px; margin: 15px 0; }
    .download-btn { padding: 6px 12px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; }
    .search-input { padding: 6px; border: 1px solid #ccc; border-radius: 5px; }
  </style>

  <script>
    // CSV Export
    function downloadCSV(tableId, filename) {
      var csv = [];
      var rows = document.querySelectorAll("#" + tableId + " tr");

      for (var i = 0; i < rows.length; i++) {
        var row = [], cols = rows[i].querySelectorAll("td, th");
        for (var j = 0; j < cols.length; j++) {
          row.push('"' + cols[j].innerText.replace(/"/g, '""') + '"');
        }
        csv.push(row.join(","));
      }

      var csvFile = new Blob([csv.join("\n")], { type: "text/csv" });
      var downloadLink = document.createElement("a");
      downloadLink.download = filename;
      downloadLink.href = window.URL.createObjectURL(csvFile);
      downloadLink.style.display = "none";
      document.body.appendChild(downloadLink);
      downloadLink.click();
    }

    // Search filter
    function filterTable(inputId, tableId) {
      var input = document.getElementById(inputId);
      var filter = input.value.toLowerCase();
      var rows = document.querySelectorAll("#" + tableId + " tbody tr");

      rows.forEach(function(row) {
        var text = row.innerText.toLowerCase();
        row.style.display = text.indexOf(filter) > -1 ? "" : "none";
      });
    }
  </script>
</head>

<body>
  <!-- HEADER -->
  <div class="header">
    <img src="redhat-ansible-logo.svg" alt="Red Hat Ansible">
    <h2>Ansible Linux Automation Report</h2>
  </div>

  <div class="container">

    <!-- Top actions -->
    <div class="top-actions">
      <button onclick="downloadCSV('main_table', 'ansible_report.csv')" class="download-btn">Download CSV</button>
      <input type="search" id="search-main" placeholder="Search..." class="search-input" onkeyup="filterTable('search-main','main_table')"/>
    </div>

    {% for linux_host in ansible_play_hosts|sort %}
    <!-- System Summary -->
    <div class="report-card">
      <h4>
        <img src="server.png" width="28">
        {{ hostvars[linux_host]['inventory_hostname'].split('.')[0] }}
        <span class="status-badge">Up-to-date</span>
      </h4>
      <p><b>Package Manager:</b> {{ hostvars[linux_host]['ansible_pkg_mgr']|default("none") }}
         &nbsp;&nbsp; <b>OS:</b> {{ hostvars[linux_host]['ansible_distribution'] }} {{ hostvars[linux_host]['ansible_distribution_version'] }}
         &nbsp;&nbsp; <b>Kernel:</b> {{ hostvars[linux_host]['ansible_kernel'] }}</p>
    </div>

    <!-- Last Patch Info -->
    <div class="mt-3">
      <div class="patch-header">Last Patch Info</div>
      <div class="patch-body">
        <table>
          <tr><td><b>IP Address</b></td><td>{{ hostvars[linux_host]['ansible_default_ipv4']['address']|default("N/A") }}</td></tr>
          <tr><td><b>User ID</b></td><td>{{ hostvars[linux_host]['ansible_user_id']|default("N/A") }}</td></tr>
          <tr><td><b>System Date</b></td><td>{{ ansible_date_time.date }} {{ ansible_date_time.time }}</td></tr>
          <tr><td><b>Last Reboot Time</b></td><td>{{ hostvars[linux_host]['ansible_lastboot']|default("N/A") }}</td></tr>
          <tr><td><b>Last 15 Installed Packages</b></td><td>
            {% if hostvars[linux_host]['installed_packages'] is defined %}
              <ul>
              {% for package in hostvars[linux_host]['installed_packages'][:15] %}
                <li>{{ package }}</li>
              {% endfor %}
              </ul>
            {% else %}
              No package data available
            {% endif %}
          </td></tr>
        </table>
      </div>
    </div>
    {% endfor %}

    <div class="text-center mt-5">
      <p>Created with</p>
      <img src="webpage_logo.png" width="250">
    </div>
  </div>
</body>
</html>

