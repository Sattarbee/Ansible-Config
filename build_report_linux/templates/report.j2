<!DOCTYPE html>
<html>
<head>
  <title>Ansible Linux Automation Report</title>
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="css/new.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      background: #f8f9fa;
      margin: 0;
      padding: 0;
    }
    .report-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background: #20232a;
      color: #fff;
    }
    .download-btn {
      padding: 8px 16px;
      font-size: 14px;
      background-color: white;
      color: black;
      border: 2px solid black;
      border-radius: 4px;
      cursor: pointer;
    }
    .download-btn:hover {
      background-color: #ddd;
    }
    .card {
      background: #fff;
      border-radius: 8px;
      padding: 20px;
      margin: 20px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.15);
    }
    .hostname {
      font-size: 20px;
      font-weight: bold;
      margin: 0;
      display: flex;
      align-items: center;
    }
    .hostname img {
      height: 20px;
      margin-right: 8px;
    }
    .hostname span {
      cursor: help;
      border-bottom: 1px dotted #666;
    }
    .status-badge {
      padding: 3px 8px;
      border-radius: 6px;
      font-size: 12px;
      margin-left: 10px;
      color: #fff;
    }
    .status-ok { background: #28a745; }
    .status-warn { background: #ffc107; color: #000; }
    .details {
      margin-top: 10px;
      font-size: 14px;
    }
    .details span {
      margin-right: 15px;
    }
    .accordion-section {
      margin-top: 10px;
    }
    .accordion-section h3 {
      font-size: 14px;
      margin: 0;
    }
    table.patch-info {
      width: 100%;
      border-collapse: collapse;
    }
    table.patch-info td {
      border: 1px solid #ccc;
      padding: 6px;
      font-size: 13px;
    }
    table.patch-info td:first-child {
      font-weight: bold;
      width: 30%;
      background: #f5f5f5;
    }
  </style>
  <script>
    $(function() {
      $("[id^='accordion-last-patch-']").accordion({
        header: "h3",
        active: false,
        collapsible: true,
        heightStyle: "content"
      });
    });
  </script>
</head>
<body>
<div class="wrapper">
  {% include 'header.j2' %}
  <section>
    <div class="report-header">
      <h1>Ansible Linux Automation Report</h1>
      <button onclick="exportTableToCSV('ansible_report.csv')" class="download-btn">Download CSV</button>
    </div>

    {% for linux_host in ansible_play_hosts|sort %}
    <div class="card">
      <p class="hostname">
        <img src="server.png"> 
        <span title="IP: {{ hostvars[linux_host]['ansible_default_ipv4']['address'] | default('N/A') }}">
          {{ hostvars[linux_host]['ansible_hostname'] | default(hostvars[linux_host]['inventory_hostname']) }}
        </span>
        {% if hostvars[linux_host]['last_patch_info'] is defined %}
          <span class="status-badge status-ok">Up-to-date</span>
        {% else %}
          <span class="status-badge status-warn">No Info</span>
        {% endif %}
      </p>
      <div class="details">
        <span><strong>Package Manager:</strong> {{ hostvars[linux_host]['ansible_pkg_mgr']|default("none") }}</span>
        <span><strong>OS:</strong> {{ hostvars[linux_host]['ansible_os_family']|default("none") }} {{ hostvars[linux_host]['ansible_distribution_version']|default("none") }}</span>
        <span><strong>Kernel:</strong> <code>{{ hostvars[linux_host]['ansible_kernel']|default("none") }}</code></span>
      </div>

      {% if hostvars[linux_host]['last_patch_info'] is defined %}
      <div id="accordion-last-patch-{{ linux_host }}" class="accordion-section">
        <h3>Last Patch Info</h3>
        <div>
          <table class="patch-info">
            <tr>
              <td>IP Address</td>
              <td>{{ hostvars[linux_host]['ansible_default_ipv4']['address'] | default('N/A') }}</td>
            </tr>
            <tr>
              <td>User ID</td>
              <td>{{ hostvars[linux_host]['ansible_user'] | default('N/A') }}</td>
            </tr>
            {% set lines = hostvars[linux_host]['last_patch_info'].split('\n') %}
            {% for line in lines %}
              {% if line.strip() %}
                {% set parts = line.split(':', 1) %}
                {% if parts|length == 2 %}
                <tr>
                  <td>{{ parts[0].strip() }}</td>
                  <td>{{ parts[1].strip() }}</td>
                </tr>
                {% else %}
                <tr>
                  <td colspan="2">{{ line }}</td>
                </tr>
                {% endif %}
              {% endif %}
            {% endfor %}
          </table>
        </div>
      </div>
      {% else %}
      <div style="margin-top:10px;"><em>No patch info found for this host.</em></div>
      {% endif %}
    </div>
    {% endfor %}

    <center>
      <p>Created with</p><br>
      <img src="webpage_logo.png" width="300">
    </center>
  </section>
</div>

<!-- CSV Export Script -->
<script>
function exportTableToCSV(filename) {
    var csv = [];
    var rows = document.querySelectorAll("table.patch-info tr");

    for (var i = 0; i < rows.length; i++) {
        var row = [], cols = rows[i].querySelectorAll("td, th");

        for (var j = 0; j < cols.length; j++) {
            var text = cols[j].innerText.replace(/(\r\n|\n|\r)/gm, "").replace(/"/g, '""');
            row.push('"' + text + '"');
        }
        csv.push(row.join(","));
    }

    var csvFile = new Blob([csv.join("\n")], { type: "text/csv" });
    var downloadLink = document.createElement("a");
    downloadLink.download = filename;
    downloadLink.href = window.URL.createObjectURL(csvFile);
    downloadLink.style.display = "none";
    document.body.appendChild(downloadLink);
    downloadLink.click();
    document.body.removeChild(downloadLink);
}
</script>

</body>
</html>
