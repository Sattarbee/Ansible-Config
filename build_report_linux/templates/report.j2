<!DOCTYPE html>
<html>
<head>
  <title> Ansible Linux Automation Report </title>
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="css/new.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
  <style>
    .report-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
    }
    .download-btn {
      padding: 8px 16px;
      font-size: 14px;
      background-color: white;
      color: black;
      border: 2px solid black;
      border-radius: 4px;
      cursor: pointer;
    }
    .download-btn:hover {
      background-color: #ddd;
    }
  </style>
  <script>
    $(function() {
      $("#accordion > div").accordion({
        header: "h3",
        active: false,
        collapsible: true
      });

      $("[id^='accordion-last-patch-']").accordion({
        header: "h3",
        active: false,
        collapsible: true
      });
    });
  </script>
</head>
<body>
<div class="wrapper">
  {% include 'header.j2' %}
  <section>

    <!-- Title + Button in Flexbox Layout -->
    <div class="report-header">
      <h1>Ansible Linux Automation Report</h1>
      <button onclick="exportTableToCSV('ansible_report.csv')" class="download-btn">Download CSV</button>
    </div>

    <table class="table table-striped mt32 main_net_table">
      <thead>
        <tr>
          <th>Linux Device</th>
          <th>Package Manager</th>
          <th>Operating System</th>
          <th>Operating System Version</th>
          <th>Operating System Kernel Version</th>
        </tr>
      </thead>
      <tbody>
        {% for linux_host in ansible_play_hosts|sort %}
        <tr>
          <td class="summary_info">
            <div id="hostname">
              <p class="hostname">
                <img class="router_image" src="server.png"> {{ hostvars[linux_host]['inventory_hostname'].split('.')[0] }}
              </p>
            </div>

            {% if hostvars[linux_host]['last_patch_info'] is defined %}
            <div id="accordion-last-patch-{{ linux_host }}" style="margin-top:10px;">
              <h3>Last Patch Info</h3>
              <div style="background:#f5f5f5; border:1px solid #ccc; padding:10px; font-family: monospace;">
                <table style="width:100%; border-collapse: collapse;">
                  <tr>
                    <td style="border:1px solid #ccc; padding:5px; font-weight:bold; width:30%;">IP Address</td>
                    <td style="border:1px solid #ccc; padding:5px;">
                      {{ hostvars[linux_host]['ansible_default_ipv4']['address'] | default('N/A') }}
                    </td>
                  </tr>
                  <tr>
                    <td style="border:1px solid #ccc; padding:5px; font-weight:bold;">User ID</td>
                    <td style="border:1px solid #ccc; padding:5px;">
                      {{ hostvars[linux_host]['ansible_user'] | default('N/A') }}
                    </td>
                  </tr>
                  {% set lines = hostvars[linux_host]['last_patch_info'].split('\n') %}
                  {% for line in lines %}
                    {% if line.strip() %}
                      {% set parts = line.split(':', 1) %}
                      {% if parts|length == 2 %}
                      <tr>
                        <td style="border:1px solid #ccc; padding:5px; font-weight:bold; width:30%;">{{ parts[0].strip() }}</td>
                        <td style="border:1px solid #ccc; padding:5px;">{{ parts[1].strip() }}</td>
                      </tr>
                      {% else %}
                      <tr>
                        <td colspan="2" style="border:1px solid #ccc; padding:5px;">{{ line }}</td>
                      </tr>
                      {% endif %}
                    {% endif %}
                  {% endfor %}
                </table>
              </div>
            </div>
            {% else %}
            <div style="margin-top:10px;"><em>No patch info found for this host.</em></div>
            {% endif %}
          </td>
          <td>{{ hostvars[linux_host]['ansible_pkg_mgr']|default("none") }}</td>
          <td>{{ hostvars[linux_host]['ansible_os_family']|default("none") }}</td>
          <td>{{ hostvars[linux_host]['ansible_distribution_version']|default("none") }}</td>
          <td>{{ hostvars[linux_host]['ansible_kernel']|default("none") }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

  </section>
</div>

<!-- CSV Export Script -->
<script>
function exportTableToCSV(filename) {
    var csv = [];
    var rows = document.querySelectorAll("table.main_net_table tr");

    for (var i = 0; i < rows.length; i++) {
        var row = [], cols = rows[i].querySelectorAll("td, th");

        for (var j = 0; j < cols.length; j++) {
            var text = cols[j].innerText.replace(/(\r\n|\n|\r)/gm, "").replace(/"/g, '""');
            row.push('"' + text + '"');
        }

        csv.push(row.join(","));
    }

    var csvFile = new Blob([csv.join("\n")], { type: "text/csv" });
    var downloadLink = document.createElement("a");

    downloadLink.download = filename;
    downloadLink.href = window.URL.createObjectURL(csvFile);
    downloadLink.style.display = "none";

    document.body.appendChild(downloadLink);
    downloadLink.click();
    document.body.removeChild(downloadLink);
}
</script>

</body>
</html>
