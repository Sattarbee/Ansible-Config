<!DOCTYPE html>
<html>
<head>
  <title>Ansible Linux Automation Report</title>
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="css/new.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      background: #f5f7fa;
      margin: 0;
      padding: 0;
    }
    .report-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background: #1e1e2f;
      color: #fff;
    }
    .download-btn {
      padding: 8px 16px;
      font-size: 14px;
      background-color: #fff;
      color: #000;
      border: 2px solid #000;
      border-radius: 6px;
      cursor: pointer;
    }
    .download-btn:hover {
      background-color: #ddd;
    }
    .search-filter {
      margin: 20px;
      text-align: right;
    }
    .search-box {
      padding: 8px;
      border-radius: 6px;
      border: 1px solid #ccc;
      width: 250px;
    }
    .card {
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      margin: 15px;
      padding: 20px;
    }
    .hostname {
      font-weight: bold;
      font-size: 18px;
      display: flex;
      align-items: center;
    }
    .hostname img {
      width: 20px;
      margin-right: 8px;
    }
    .status-badge {
      padding: 3px 8px;
      border-radius: 6px;
      font-size: 12px;
      margin-left: 10px;
    }
    .status-ok {
      background: #4caf50;
      color: #fff;
    }
    .status-warn {
      background: #ff9800;
      color: #fff;
    }
    .system-info {
      margin-top: 10px;
      font-size: 14px;
    }
    .system-info span {
      display: inline-block;
      margin-right: 15px;
    }
    .kernel {
      font-family: monospace;
      background: #f0f0f0;
      padding: 2px 6px;
      border-radius: 4px;
    }
    .accordion-section {
      margin-top: 15px;
    }
    .footer {
      text-align: center;
      margin-top: 40px;
      padding: 20px;
      color: #555;
    }
  </style>
  <script>
    $(function() {
      $("[id^='accordion-last-patch-']").accordion({
        header: "h3",
        active: false,
        collapsible: true,
        heightStyle: "content"
      });
    });

    function filterCards() {
      var input = document.getElementById("searchInput").value.toLowerCase();
      var cards = document.getElementsByClassName("card");
      for (var i = 0; i < cards.length; i++) {
        var text = cards[i].innerText.toLowerCase();
        cards[i].style.display = text.includes(input) ? "" : "none";
      }
    }

    function exportTableToCSV(filename) {
      var csv = [];
      var cards = document.querySelectorAll(".card");
      cards.forEach(function(card) {
        var rows = [];
        rows.push(card.querySelector(".hostname").innerText);
        rows.push(card.querySelector(".system-info").innerText);
        csv.push(rows.join(","));
      });

      var csvFile = new Blob([csv.join("\n")], { type: "text/csv" });
      var downloadLink = document.createElement("a");
      downloadLink.download = filename;
      downloadLink.href = window.URL.createObjectURL(csvFile);
      document.body.appendChild(downloadLink);
      downloadLink.click();
      document.body.removeChild(downloadLink);
    }
  </script>
</head>
<body>
<div class="wrapper">
  {% include 'header.j2' %}
  <section>
    <!-- Title + Button -->
    <div class="report-header">
      <h1>Ansible Linux Automation Report</h1>
      <button onclick="exportTableToCSV('ansible_report.csv')" class="download-btn">Download CSV</button>
    </div>

    <!-- Search -->
    <div class="search-filter">
      <input type="text" id="searchInput" onkeyup="filterCards()" class="search-box" placeholder="Search by hostname, OS, version...">
    </div>

    <!-- Cards Layout -->
    {% for linux_host in ansible_play_hosts|sort %}
    <div class="card">
      <p class="hostname">
        <img src="server.png"> {{ hostvars[linux_host]['inventory_hostname'].split('.')[0] }}
        {% if hostvars[linux_host]['last_patch_info'] is defined %}
          <span class="status-badge status-ok">Up-to-date</span>
        {% else %}
          <span class="status-badge status-warn">No Info</span>
        {% endif %}
      </p>

      <div class="system-info">
        <span><b>Package Manager:</b> {{ hostvars[linux_host]['ansible_pkg_mgr']|default("none") }}</span>
        <span><b>OS:</b> {{ hostvars[linux_host]['ansible_os_family']|default("none") }} {{ hostvars[linux_host]['ansible_distribution_version']|default("none") }}</span>
        <span><b>Kernel:</b> <span class="kernel">{{ hostvars[linux_host]['ansible_kernel']|default("none") }}</span></span>
      </div>

      <!-- Last Patch Info -->
      <div id="accordion-last-patch-{{ linux_host }}" class="accordion-section">
        <h3>Last Patch Info</h3>
        <div>
          {% if hostvars[linux_host]['last_patch_info'] is defined %}
          <table style="width:100%; border-collapse: collapse;">
            <tr>
              <td><b>IP Address</b></td>
              <td>{{ hostvars[linux_host]['ansible_default_ipv4']['address'] | default('N/A') }}</td>
            </tr>
            <tr>
              <td><b>User ID</b></td>
              <td>{{ hostvars[linux_host]['ansible_user'] | default('N/A') }}</td>
            </tr>
            {% set lines = hostvars[linux_host]['last_patch_info'].split('\n') %}
            {% for line in lines %}
              {% if line.strip() %}
                {% set parts = line.split(':', 1) %}
                {% if parts|length == 2 %}
                <tr>
                  <td><b>{{ parts[0].strip() }}</b></td>
                  <td>{{ parts[1].strip() }}</td>
                </tr>
                {% else %}
                <tr>
                  <td colspan="2">{{ line }}</td>
                </tr>
                {% endif %}
              {% endif %}
            {% endfor %}
          </table>
          {% else %}
          <p><em>No patch info found for this host.</em></p>
          {% endif %}
        </div>
      </div>
    </div>
    {% endfor %}

    <div class="footer">
      <p>Created with ❤️ using Ansible</p>
      <img src="webpage_logo.png" width="250">
    </div>
  </section>
</div>
</body>
</html>
